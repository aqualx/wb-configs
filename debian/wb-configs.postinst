#!/bin/bash
. /etc/wb_env.sh
wb_source "of"

#DEBHELPER#

RULES_DST_DIR=/etc/udev/rules.d
RULES_DIR=/etc/udev/wb

SUFFIX=$(of_machine_match \
	'contactless,imx6ul-wirenboard60'	wb6 \
	'contactless,imx28-wirenboard50'	wb5 \
	'contactless,imx28-wirenboard41'	wb4 \
	'contactless,imx23-wirenboard32'	wb3 \
	'contactless,imx23-wirenboard28'	wb2 \
	'' "default"
)

ucf --debconf-ok "$RULES_DIR/wb.rules.$SUFFIX" "$RULES_DST_DIR/wb.rules"
